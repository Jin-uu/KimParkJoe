<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@color/blue_200"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:text="설정"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:paddingTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBackgroundView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        app:cardCornerRadius="70dp"
                        app:cardElevation="0dp" >

                        <ImageView
                            android:id="@+id/my_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:background="@drawable/profile"
                            android:src="@drawable/profile_sample" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|left">

                        <TextView
                            android:id="@+id/my_name"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:text="닉네임"
                            android:textSize="30dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/my_message"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:text="상태메세지를 입력해 주세요."
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_change_profile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="프로필 변경하기"
                    android:textSize="35dp"
                    android:textColor="@color/black"
                    android:background="@drawable/button_blue"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>

                <LinearLayout
                android:id="@+id/Linear_setting_achieve"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/achieve"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="달성한 도전과제"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/achieve_num"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="13 / 50"
                    android:textSize="25dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/color_rank"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="랭킹"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_setting_main_rankTypeSelect"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="친구만"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
