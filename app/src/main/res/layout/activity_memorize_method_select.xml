<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <ImageButton
        android:id="@+id/btn_memorize_method_select_back"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:background="#00FFFFFF"
        android:src="@drawable/back"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="암기 방식 선택"
        android:textSize="50dp" />

    <LinearLayout
        android:id="@+id/Lnr_selection"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="유형"
                android:textSize="25dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_memorize_type_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="유형 선택"
                android:textSize="25dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="방식"
                android:textSize="25dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_memorize_method_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="방식 선택"
                android:textSize="25dp"
                android:gravity="center"/>

        </LinearLayout>
        
    </LinearLayout>

    <Button
        android:id="@+id/btn_memorize_start"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/Lnr_selection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="START!"
        android:textSize="35dp" />



</RelativeLayout>