<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <RelativeLayout
        android:id="@+id/memorize_method_select_upper_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/blue_200"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_memorize_method_select_quit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_memorize_method_select_quit"
            android:fontFamily="@font/bold"
            android:gravity="center_vertical"
            android:text="암기 방식 선택"
            android:textColor="@color/black"
            android:textSize="50dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Lnr_selection"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_below="@+id/memorize_method_select_upper_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_left2"
                android:gravity="center"
                android:text="유형"
                android:fontFamily="@font/reguler"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_memorize_type_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_right2"
                android:gravity="center"
                android:text="유형 선택"
                android:fontFamily="@font/reguler"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:background="@drawable/round_left2"
                android:gravity="center"
                android:text="방식"
                android:fontFamily="@font/reguler"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tv_memorize_method_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_right2"
                android:gravity="center"
                android:text="방식 선택"
                android:fontFamily="@font/reguler"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_memorize_start"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/Lnr_selection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="START!"
        android:textSize="35dp"
        android:fontFamily="@font/reguler"
        android:textColor="@color/black"
        android:background="@drawable/button_green"/>

</RelativeLayout>